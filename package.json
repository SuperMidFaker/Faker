{
  "name": "welogix-web",
  "version": "1.0.0",
  "description": "WeLogix GTM Collaboration Network",
  "main": "server/sboot.js",
  "scripts": {
    "clean": "rm -rf public/dist",
    "debug": "node --debug .",
    "lint": "eslint --fix --ext .js --ext .jsx client server common webpack",
    "admin-hot": "webpack-dev-server --config webpack/adminDev.js",
    "admin-dev": "nodemon server/sboot.js -- --admin=true --port=3026",
    "hot": "webpack-dev-server --config webpack/dev.js",
    "dev": "nodemon",
    "start": "npm run clean & npm run hot &  npm run dev",
    "test-build": "NODE_ENV=test webpack --progress --profile --diplay-modules --display-origins --config webpack/prod.js",
    "test-prod": "NODE_ENV=test node . --port=3022",
    "test-deploy": "npm run clean && npm run test-build && npm run test-prod",
    "build": "npm run build-i18n & NODE_ENV=production webpack --progress --profile --diplay-modules --display-origins --config webpack/prod.js & NODE_ENV=production webpack --progress --profile --diplay-modules --display-origins --config webpack/adminProd.js",
    "build-i18n": "babel --babelrc .i18n.babelrc client common -d public/dist/messages && babel-node scripts/translation/extract",
    "build-i18n2": "babel --babelrc .i18n.babelrc .> /dev/null && babel-node scripts/translation/extract",
    "prod": "NODE_ENV=production node . --port=3022",
    "pm2": "pm2 start pm2/prod.js",
    "deploy": "npm run clean && npm run build && npm run pm2",
    "test": "mocha --reporter spec --bail --check-leaks tests/*_test.js"
  },
  "repository": {
    "type": "git",
    "url": "git@git.welogix.cn:saas/welogix-web.git"
  },
  "keywords": [
    "tms",
    "wms",
    "collaboration",
    "sass",
    "react",
    "router",
    "koa"
  ],
  "author": "The Welogix Team",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "antd": "^1.10.0",
    "babel": "^5.8.38",
    "classnames": "^2.2.5",
    "co-body": "^4.2.0",
    "echarts": "^3.2.1",
    "glob": "^7.0.5",
    "intl": "^1.2.4",
    "koa": "^1.2.1",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "lodash": "^4.15.0",
    "moment": "^2.13.0",
    "oneapm": "^1.2.20",
    "rc-queue-anim": "^0.12.4",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-dropzone": "^3.5.1",
    "react-intl": "^2.1.3",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-weui": "^0.4.0",
    "redux": "^3.5.2",
    "serialize-javascript": "^1.3.0",
    "socket.io": "^1.4.8",
    "superagent": "^2.0.0",
    "webpack-isomorphic-tools": "^2.5.7",
    "weui": "^0.4.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^5.8.38",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^5.4.2",
    "babel-plugin-react-intl": "^1.0.1",
    "babel-plugin-react-transform": "^1.1.1",
    "babel-runtime": "^5.8.38",
    "css-loader": "^0.23.1",
    "eslint": "^3.3.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "happypack": "^2.2.1",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.0.2",
    "postcss-loader": "^0.9.1",
    "pre-commit": "^1.1.3",
    "react-transform-hmr": "^1.0.4",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
